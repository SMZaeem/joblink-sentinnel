{
  "manifest_version": 3,
  "name": "JobLink Sentinel",
  "version": "1.0.0",
  "description": "Checks job links for expiration using MERN and Puppeteer",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
  }
}